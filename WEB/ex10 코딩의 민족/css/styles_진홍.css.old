@font-face {
    font-family: "bmjua";
    src: url("./fonts/BMJUA_otf.otf")
}

* {
  box-sizing: border-box;
  font-family: "bmjua";
  text-align: center;
}

body{
	background-color: rgb(240, 232, 217);
}

#title{
	margin-top: 75px;
	margin-bottom: 30px;
	font-size: 64px;
}

#subtitle{
	margin-top: 0px;
	margin-bottom: 75px;
	font-size: 32px;
}

.menu{
	background-color : white;
	width : 300px;
	margin-bottom : 50px;
	margin-right : auto;
	margin-left : auto;
	border-radius: 0px 0px 10px 10px;
}
.menuimg{
	width: 300px;
	height: 200px;
	border-radius:10px 10px 0px 0px;
}
.menutitle{
	font-size: 32px;
	margin: 0px;
}

.explanation{
	margin-top : 20px;
	margin-bottom : 16px;
}

.payment{
	color: rgb(0, 0, 238);
	text-decoration: none;
}
.menuChar{
	padding : 20px;
}