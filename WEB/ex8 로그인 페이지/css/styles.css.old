body {
  margin: 0;
  background-color: #1BBC9B;
}

.login-form {
  padding-top: 20px;
  padding-bottom: 20px;
  border-radius: 5px;
  background-color: rgb(238, 239, 241);
  text-align: center;
  margin-left: 300px;
